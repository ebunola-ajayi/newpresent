<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="15dp"
    android:background="@color/white">

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/image"
        android:layout_marginRight="10dp"
        android:src="@drawable/parenticon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/image"
        android:id="@+id/parentOf"
        android:text="Parent Of: "
        android:textColor="@color/black"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Student ID:"
        android:textColor="@color/black"
        android:id="@+id/studentNo"
        android:textSize="18dp"
        android:layout_below="@+id/parentOf"
        android:layout_toEndOf="@+id/image"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Parent Email:"
        android:textColor="@color/black"
        android:id="@+id/parentEmail"
        android:textSize="15dp"
        android:layout_below="@+id/studentNo"
        android:layout_toEndOf="@+id/image"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/line1"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/parentEmail"
        android:layout_marginTop="30dp"
        android:background="@color/black"
        android:orientation="horizontal" />



</RelativeLayout>