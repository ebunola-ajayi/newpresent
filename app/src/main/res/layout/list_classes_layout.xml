<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="15dp"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/image"
        android:layout_marginRight="10dp"
        android:src="@drawable/teacher3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/image"
        android:id="@+id/teacherNameTV"
        android:text="Teacher Name"
        android:textColor="@color/black"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-  ClassID"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_toEndOf="@+id/teacherNameTV"
        android:id="@+id/classIDTV"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Teacher Email"
        android:textColor="@color/black"
        android:id="@+id/emailTV"
        android:textSize="18dp"
        android:layout_below="@+id/teacherNameTV"
        android:layout_toEndOf="@+id/image"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Class Grade"
        android:textColor="@color/black"
        android:id="@+id/classGradeTV"
        android:textSize="18dp"
        android:layout_below="@+id/emailTV"
        android:layout_toEndOf="@+id/image"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/line1"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/classGradeTV"
        android:layout_marginTop="30dp"
        android:background="@color/black"
        android:orientation="horizontal" />



</RelativeLayout>

