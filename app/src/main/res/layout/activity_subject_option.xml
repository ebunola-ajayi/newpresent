<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".teacheracademics.SubjectOptionActivity">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_gravity="center"
            android:textColor="#3A56EF"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"
            android:id="@+id/subName"
            android:text="Subject Name"/>

  <Button
      android:layout_width="300dp"
      android:layout_gravity="center"
      android:layout_height="wrap_content"
      android:layout_marginTop="100dp"
      android:id="@+id/viewAcademic"
      android:text="View Academic Records"/>

    <Button
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:id="@+id/addAcademic"
        android:text="Add Academic Records"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newTopic"
        android:hint="Topic Name: E.G. Geometry"/>






</LinearLayout>