<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".teacheracademics.SubjectOptionActivity">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_gravity="center"
            android:textColor="#504646"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"
            android:id="@+id/subName"
            android:text="Subject Name"/>


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/viewAcademic"
        android:layout_marginTop="40dp"
        android:src="@drawable/graderecord"
        android:layout_gravity="center"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/addAcademic"
        android:layout_marginTop="30dp"
        android:src="@drawable/addgrade"
        android:layout_gravity="center"/>


    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/newTopic"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:hint="Topic Name:"/>




</LinearLayout>